Config { font       = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor    = "black"
       , fgColor    = "gray"
       , position   = TopW L 90
       , commands   = [ Run Weather "KSAC" [ "-t", " <tempC>C" 
                                           , "-L", "10"
                                           , "-H", "25"
                                           , "--normal", "green"
                                           , "--high", "red"
                                           , "--low", "lightblue"] 36000
                      , Run Cpu [ "-L", "10"
                                , "-H", "66"
                                , "--normal", "green"
                                , "--high", "red"] 10
                      , Run Memory [ "-t", "Mem: <usedratio>%" ] 10
                      , Run Swap [] 10
                      , Run Date "%a %b %_d %l:%M" "date" 10
                      , Run StdinReader
                      , Run Battery [ "-t", "<acstatus> <leftbar> <left>%"
                                    , "--"
                                    , "-O", "<fc=green>AC Charging</fc>"
                                    , "-o", ""
                                    ] 10
                      ]
       , sepChar    = "%"
       , alignSep   = "}{"
       , template   = "%StdinReader% }{ %battery% | %cpu% | %memory% * %swap%  <fc=#ee9a00>%date%</fc> | %KSAC%"
       }
