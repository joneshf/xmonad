Config { font       = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor    = "black"
       , fgColor    = "gray"
       , position   = TopW L 100
       , commands   = [ Run Weather "KSAC" [ "-t", " <tempC>C"
                                           , "-L", "10"
                                           , "-H", "25"
                                           , "--normal", "green"
                                           , "--high", "red"
                                           , "--low", "lightblue" ] 36000
                      , Run MultiCpu [ "-t", "Cpu: <autobar>"
                                     , "-L", "33"
                                     , "-H", "66"
                                     , "--normal", "green"
                                     , "--high", "red" ] 10
                      , Run Memory [ "-t", "Mem: <usedratio>%" ] 10
                      , Run Swap [] 10
                      , Run Date "<fc=#EEAA00>%a %b %d %H:%M</fc>" "date" 10
                      , Run StdinReader
                      , Run Battery [ "-t", "<acstatus> <leftbar> <left>%"
                                    , "-L", "60"
                                    , "-H", "95"
                                    , "-l", "red"
                                    , "-n", "blue"
                                    , "-h", "green"
                                    , "--"
                                    , "-O", "<fc=green>AC Charging</fc>"
                                    , "-o", "<fc=red>Discharging</fc>"
                                    , "-f", "ACAD/online"
                                    ] 10
                      ]
       , sepChar    = "%"
       , alignSep   = "}{"
       , template   = "%StdinReader% }{ %battery% | %multicpu% | %memory% * %swap% | %date% | %KSAC% "
       }
